<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:background="@color/MBlogo_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.profile.ProfileFragment"
    tools:showIn="@layout/fragment_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            style="@style/headerText"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="Account Info" />

    <ImageButton
        android:id="@+id/editacc"
        android:layout_marginTop="7sp"
        style="@style/profileDetailsImage"
        android:layout_height="28dp"
        android:layout_width="28dp"
        android:layout_marginBottom="20dp"
        android:background="@null"/>

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nameImageView"
                style="@style/profileDetailsImage"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name" />

                <EditText
                    android:id="@+id/firstname"
                    style="@style/profileDetailsMiniText"
                    android:layout_marginLeft="10dp"
                    android:text="Chintan"
                    android:gravity="top"
                    android:inputType="text"/>


            </LinearLayout>
        </LinearLayout>

        <View style="@style/proifleDetailsView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mobileImageView"
                style="@style/profileDetailsImage"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name" />

                <EditText
                    android:id="@+id/lastname"
                    android:text="Mistry"
                    style="@style/profileDetailsMiniText"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:inputType="text" />



            </LinearLayout>
        </LinearLayout>

        <View style="@style/proifleDetailsView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emailImageView"
                style="@style/profileDetailsImage"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mail_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                \

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_toRightOf="@id/emailImageView"
                    android:text="Change Password" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/changepassword"
                        style="@style/profileDetailsMiniText"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/emailImageView"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:inputType="textPassword"
                        android:text="abcd1234" />


                    <ImageButton
                        android:layout_marginTop="7sp"
                        android:id="@+id/showHideBtn"
                        style="@style/profileDetailsImage"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@null" />



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/proifleDetailsView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shopNameImageView"
                style="@style/profileDetailsImage"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_phone_black_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shopNameTextView"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact" />

                <EditText
                    android:id="@+id/mobile"
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:inputType="phone"
                    android:text="9898242556"
                    android:textColorHint="@color/textmenu" />


            </LinearLayout>
        </LinearLayout>
        <View style="@style/proifleDetailsView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addressImageView"
                style="@style/profileDetailsImage"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_location"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/addressImageView"
                    android:text="Permanent Address" />

                <EditText
                    android:id="@+id/Address"
                    style="@style/profileDetailsMiniText"
                    android:gravity="top"
                    android:text="A/13 Swastik cross roads , Ahmedabad" />

            </LinearLayout>
        </LinearLayout>
        <View style="@style/proifleDetailsView" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
