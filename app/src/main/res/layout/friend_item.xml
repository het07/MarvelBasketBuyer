<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_friends"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="#009a9a"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border1"
            android:gravity="center"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageView_friends"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="2dp"
                android:src="@drawable/friendsimg1" />


            <TextView
                android:id="@+id/textView1_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_friends"
                android:layout_marginLeft="38dp"
                android:gravity="fill_horizontal"
                android:text="chintan"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1_friends"
                android:layout_marginLeft="38dp"
                android:text="Events : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1_friends"
                android:layout_toEndOf="@id/textView3_static"
                android:layout_toRightOf="@id/textView3_static"
                android:text="3"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>